{
	"name": "Template",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"runArgs": [
		"--gpus", "all","--init", "-v", "${env:HOME}/.ssh:/root/.ssh"
	],
	"postStartCommand": "chmod +x aider.sh && gh auth login && gh auth status && git remote set-url origin https://github.com/llama887/dev_container_template.git && python /workspaces/rl_doom/debug/check_dependencies.py",
	"customizations": {
		"vscode": {
			"extensions": [
				"charliermarsh.ruff",
				"codezombiech.gitignore",
				"kevinrose.vsc-python-indent",
				"ms-azuretools.vscode-docker",
				"ms-python.python",
				"njpwerner.autodocstring",
				"oderwat.indent-rainbow",
				"shardulm94.trailing-spaces",
				"usernamehw.errorlens",
				"yzhang.markdown-all-in-one",
				"ms-toolsai.jupyter",
				"ms-toolsai.tensorboard",
				"aaron-bond.better-comments",
				"cardinal90.multi-cursor-case-preserve",
				"shd101wyy.markdown-preview-enhanced",
				"supermaven.supermaven",
				"continue.continue",
				"saoudrizwan.claude-dev"
			],
			"settings": {
				"[python]": {
					"editor.defaultFormatter": "charliermarsh.ruff",
					"editor.codeActionsOnSave": {
						"source.fixAll.ruff": "explicit",
						"source.organizeImports.ruff": "explicit"
					},
					"editor.formatOnSave": true
				},
				"files.insertFinalNewline": true,
				"files.trimTrailingWhitespace": true,
				"terminal.integrated.defaultProfile.linux": "zsh",
				"terminal.integrated.profiles.linux": {
					"zsh": {
						"path": "/bin/zsh"
					}
				}
			}
		}
	}
}
