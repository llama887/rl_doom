{
    "name": "VizDoom CS-GY 6923",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "runArgs": [
        "--gpus", "all"
    ],
    "customizations": {
		"vscode": {
			"extensions": [
				"charliermarsh.ruff",
				"codezombiech.gitignore",
				"eamodio.gitlens",
				"kevinrose.vsc-python-indent",
				"ms-azuretools.vscode-docker",
				"ms-python.python",
				"njpwerner.autodocstring",
				"oderwat.indent-rainbow",
				"shardulm94.trailing-spaces",
				"usernamehw.errorlens",
				"yzhang.markdown-all-in-one",
				"iterative.dvc",
				"ms-toolsai.jupyter",
				"ms-toolsai.tensorboard"
			],
			"settings": {
				"[python]": {
					"editor.defaultFormatter": "charliermarsh.ruff",
					"editor.codeActionsOnSave": {
						"source.fixAll.ruff": "explicit",
						"source.organizeImports.ruff": "explicit"
					},
					"editor.formatOnSave": true
				},
				"files.insertFinalNewline": true,
				"files.trimTrailingWhitespace": true,
				"terminal.integrated.defaultProfile.linux": "zsh",
				"terminal.integrated.profiles.linux": {
					"zsh": {
						"path": "/bin/zsh"
					}
				}
			}
		}
    },
    // Automatically start the virtual display (Xvfb) and run your dependency check script
    "postStartCommand": "Xvfb :1 -screen 0 800x600x16 & export DISPLAY=:1 && python /workspaces/rl_doom/debug/check_dependencies.py && python /workspaces/rl_doom/debug/vizdoom_test.py", //&& gh auth login && gh auth status",
}
